[user]
	name = wada811
	email = at.wada811@gmail.com
[common]
	excludesfile = ~/.gitignore
	precomposeunicode = true
	autocrlf = input
[credential]
	helper = osxkeychain
[init]
	defaultBranch = main
[color]
	ui = true
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[help]
	autocorrect = 10
[diff]
	compactionHeuristic = true
	noprefix = true
[diff "json"]
	textconv = "jq ."
[fetch]
	all = true
	prune = true
[merge]
	ff = false
[pull]
	ff = only
	autostash = true
[rebase]
	updateRefs = true
	autostash = true
[commit]
	template = ~/dotfiles/git/commit_template
[push]
	default = simple
	autoSetupRemote = true
[alias]
	st = status
	ch = checkout
	chf = "!f() { git checkout -b andy/feature/$1; }; f"
	chb = "!f() { git checkout -b andy/bugfix/$1; }; f"
	chi = "!f() { git checkout -b andy/internal/$1; }; f"
	cho = "!f() { git checkout -b andy/other/$1; }; f"
	co = commit
	lg = log --all --graph --decorate --oneline
	cp = cherry-pick
	fix = commit --amend --no-edit
	push-f = push --force-with-lease --force-if-includes
	# Separate merged commit by `git commit --amend`
	separate = reset HEAD@{1}
	# Revert commit
	cancel-commit = reset --soft HEAD^
	# Revert merge
	cancel-merge = reset --hard ORIG_HEAD
	# Delete merged branches
	delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
	# Ignore local and keep local
	ignore = update-index --skip-worktree
	# Unignore local
	unignore = update-index --no-skip-worktree
	# List ignore local
	ignored = !git ls-files -v | grep "^S"
	# Ignore local temporary and update by remote
	ignore-temporary = update-index --assume-unchanged
	# Unignore local
	unignore-temporary = update-index --no-assume-unchanged
	# List ignore local temporary
	ignored-temporary = !git ls-files -v | grep "^[a-z]"
[core]
	excludesfile = /Users/andy/.gitignore
