[core]
	excludesfile = ~/.gitignore
	precomposeunicode = true
[color]
	ui = true
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[merge]
	ff = false
[pull]
	ff = only
[alias]
	lg = log --all --graph --decorate --oneline --abbrev-commit
	fix = commit --amend
